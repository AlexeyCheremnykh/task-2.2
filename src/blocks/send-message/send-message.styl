@import "../../colors"

.send-message
  width: 288px

  &__input-field
    box-sizing: border-box
    background-color: send-msg-input-background
    outline-color: send-msg-outline
    border: none
    border-radius: 4px
    color: send-msg-text
    font-size: 14px
    padding-left: 13px
    font-family: "Source Sans Pro", "Arial", sans-serif
    font-weight: 400
    letter-spacing: 0.01em
    font-style: normal
    font-stretch: normal

    &::placeholder
      color: send-msg-placeholder
  
  &__name-field,
  &__email-field
    padding-bottom: 3px
    padding-right: 5px
    width: 208px
    height: 28px
    margin-bottom: 12px

  &__validation-message        
    opacity: 0        
    position: relative
    float: right
    width: 72px
    height: 28px
    border-radius: 4px
    font-family: "Lato", "Arial", sans-serif
    font-weight: 900
    letter-spacing: 0.05em
    color: white
    font-size: 10px
    text-align: center
    line-height: 28px
    background-color: main-blue

    &::before
      content: ""
      display: block
      position: absolute
      left: -4px
      top: 10px           
      border-style: solid
      border-width: 4px 4px 4px 0
      border-color: transparent main-blue transparent transparent

    &_error            
      background-color: main-red            

      &::before
        border-right-color: main-red

  &__message
    padding-top: 9px               
    width: 288px
    height: 88px
    resize: none
    margin-bottom: 6px        

  & &__submit
    float: right
    background-color: main-blue
    box-shadow: 0 3px 0 0 send-msg-btn-shadow
    color: white

  &::after
    content: ""
    display: block
    clear: both
