@import "../../colors"

.send-message
  width 18rem

  &__name,
  &__email
    margin-bottom 0.75rem

  &__name-field,
  &__email-field
    width 72.22222%
    height 1.75rem
    display inline-block

  &__validation-message
    position relative
    float right
    width 25%
    height 1.75rem
    border-radius 0.25rem
    font-family "Lato", "Arial", sans-serif
    font-weight 900
    font-size 0.625rem
    text-transform uppercase
    letter-spacing 0.05em
    color white
    text-align center
    line-height 1.75rem
    background-color $main-cyan

    &::before
      content ""
      display block
      position absolute
      left -0.25rem
      top 50%
      transform translateY(-50%)
      border-style solid
      border-width 0.25rem 0.25rem 0.25rem 0
      border-color transparent $main-cyan transparent transparent

    &_error
      background-color $main-red

      &::before
        border-right-color $main-red

  &__message
    height 5.5rem
    margin-bottom 0.625rem

  &__submit
    float right

  &::after
    content ""
    display block
    clear both
