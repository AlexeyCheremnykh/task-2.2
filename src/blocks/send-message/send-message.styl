.send-message
  width: 288px

  &__input-field
    box-sizing: border-box
    background-color: #e5e5e5
    outline-color: #666666
    border: none
    border-radius: 4px
    color: #666666
    font-size: 14px
    padding-left: 13px
    font-family: "Source Sans Pro", "Arial", sans-serif
    font-weight: 400
    letter-spacing: 0.01em
    font-style: normal
    font-stretch: normal

    &::placeholder
      color: #888888

  &__name-field,
  &__email-field
    padding-bottom: 3px
    padding-right: 5px
    width: 72.22222%
    height: 28px
    margin-bottom: 12px

  &__validation-message
    opacity: 0
    position: relative
    float: right
    width: 25%
    height: 28px
    border-radius: 4px
    font-family: "Lato", "Arial", sans-serif
    font-weight: 900
    letter-spacing: 0.05em
    color: white
    font-size: 10px
    text-align: center
    line-height: 28px
    background-color: #4eb7a8

    @media (max-width: 420px)
      font-size: 8px
      font-weight: 400

    &::before
      content: ""
      display: block
      position: absolute
      left: -4px
      top: 10px
      border-style: solid
      border-width: 4px 4px 4px 0
      border-color: transparent #4eb7a8 transparent transparent

    &_error
      background-color: #e75735

      &::before
        border-right-color: #e75735

  &__message
    padding-top: 9px
    width: 100%
    height: 88px
    resize: none
    margin-bottom: 6px

  &__submit
    float: right

  &::after
    content: ""
    display: block
    clear: both