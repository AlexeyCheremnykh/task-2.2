include ../standard-button/standard-button.pug

mixin send_message()
    form.send-message
        .send-message__name
            input(type="text" name="name" placeholder="Your Name" class="send-message__data send-message__name-field" required)
            .send-message__validation-message
        .send-message__email
            input(type="email" name="email" placeholder="Your Email" class="send-message__data send-message__email-field" required)
            .send-message__validation-message
        textarea(placeholder="Your Message" class="send-message__data send-message__message")
        +standard_button("big", "blue", "submit")