@import "../../colors"

.incomming-message
  position relative
  height 4.3125rem
  background-color $white
  border-radius 0.4375rem

  &::before
    content ""
    display block
    position absolute
    width 0.125rem
    top -0.375rem
    left 46%
    border-style solid
    border-width 0 0.3125rem 0.375rem 0.3125rem
    border-color transparent transparent $white transparent

  &__inner
    box-sizing border-box
    overflow auto
    padding 1.0625rem 1.3rem 1.375rem
    height 100%
    width 100%
    font-family "Lato", "Arial", sans-serif
    font-size 0.7813rem
    color $grey-86
    letter-spacing 0.05em
