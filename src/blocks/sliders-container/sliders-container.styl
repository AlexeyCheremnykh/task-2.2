.sliders-container
    width: 589px
    height: 117px
    margin-bottom: 15px
    
    &__content        
        margin-top: 46px

        &::after
            content: ""
            display: block
            clear: both

    &__first-example
        float: left
    &__second-example
        float: right

@media (max-width: 645px)
    .sliders-container
        width: 95%
        height: 142px
        margin-bottom: 32px

        &__first-example,
        &__second-example
            width: 260px
            margin: 0 auto 35px
            float: none
            display: block
        
