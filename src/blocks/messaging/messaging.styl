@import "../../colors"

.messaging
  width: 288px
  border-radius: 4px
  overflow: hidden
  position: relative

  &__person-name
    font-family: "Source Sans Pro", "Arial", sans-serif
    font-weight: 300
    text-align: center
    line-height: 77px
    font-size: 34px
    letter-spacing: -0.03em
    color: $white

    &-upper
      height: 82px
      background-color: $main-blue
      overflow: hidden

    &-lower
      height: 34px
      background-color: #46ab9d

  &__person-photo
    position: absolute
    top: 71px
    left: 94px
    height: 84px
    width: 84px
    border-radius: 50%
    border: 4px solid $grey-e5
    margin-right: 11px
    background: url("img/messaging-woman.jpg")
    background-size: cover

  &__messages
    padding-bottom: 29px
    background-color: $grey-f2

  &__icons
    box-sizing: border-box
    height: 62px
    padding: 21px 22px 12px 22px
    display: flex
    justify-content: space-between

  &__icon
    height: 30px
    width: 30px

    &_chat
      background: url("img/messaging-chat-icon.png") no-repeat 5px 1px

    &_camera
      background: url("img/messaging-camera-icon.png") no-repeat

  &__input-message-wrapper
    position: relative
    width: 243px
    height: 69px
    margin-left: 22px
    margin-right: 23px
    background-color: $white
    font-weight: 600
    font-family: "Lato", "Arial", sans-serif
    font-size: 12.5px
    color: $grey-86
    letter-spacing: 0.05em
    border-radius: 7px

    &::before
      content: ""
      display: block
      position: absolute
      width: 2px
      top: -6px
      left: 112px
      border-style: solid
      border-width: 0 5px 6px 5px
      border-color: transparent transparent $white transparent

  &__input-message
    box-sizing: border-box
    overflow: auto
    padding: 18px 18px 15px
    height: 100%
    width: 100%

  &__output-message
    box-sizing: border-box
    resize: none
    outline: none
    display: block
    margin: 17px auto 15px
    padding: 16px
    height: 88px
    width: 244px
    background-color: $grey-e5
    border: 3px solid $white
    border-radius: 6px
    font-weight: 600
    font-family: "Lato", "Arial", sans-serif
    font-size: 12.5px
    color: $grey-77
    letter-spacing: 0.05em

    &:focus
      background-color: $grey-ec

  &__reply
    text-align: center
