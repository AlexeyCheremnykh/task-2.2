@import "../../colors"

.tick-box
  position: relative
  width: 23px
  height: 23px        
  border-radius: 50%

  &::after
    position: absolute
    content: ""
    display: block
    width: 9px
    height: 4px
    transform: rotate(-45deg)    
      
  &_unchecked
    background-color: disabled-grey
          
    &::after
      top: 7px
      right: 6px
      border-left: 2px solid tick-box-tick
      border-bottom: 2px solid tick-box-tick

  &_checked
    background-color: main-blue
          
    &::after
      top: 7px
      right: 6px
      border-left: 2px solid white
      border-bottom: 2px solid white
