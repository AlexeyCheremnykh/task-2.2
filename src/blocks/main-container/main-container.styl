.main-container
    width: 620px //594
    margin-left: auto
    margin-right: auto    
    padding-top: 73px
    padding-bottom: 109px
    display: flex
    flex-direction: column
    align-items: center

    &__title
        margin-top: 0
        margin-bottom: 0        
        text-align: center
        text-transform: uppercase
        color: #4f4f4f
        font-size: 18px
        font-family: "Lato"
        font-weight: 900
        letter-spacing: 0.9px
        word-spacing: 4px

    .search-user-profile-container
        width: 100%

@media (max-width: 660px)
    .main-container
        width: 100%