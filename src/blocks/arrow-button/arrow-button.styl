@import "../../colors"

.arrow-button
  outline: none
  position: relative
  width: 50px
  height: 50px
  border-radius: 50%
  border: 3px solid $main-blue
  background-color: #ffffff
  cursor: pointer

  &_right::after
    transform: rotate(45deg)
    right: 16px

  &_left::after
    transform: rotate(-135deg)
    left: 16px

  &:hover
    background-color: $main-blue

    &::after
      border-color: #ffffff
      background-color: $main-blue

  &:disabled
    background-color: #e5e5e5
    border-color: #e5e5e5
    cursor: default

    &::after
      border-color: #ffffff
      background-color: #e5e5e5

  &:focus
    outline: 2px solid #e5e5e5

  &::after
    content: ""
    position: absolute
    top: 14px
    width: 13px
    height: 13px
    border-top: 4px solid $main-blue
    border-right: 4px solid $main-blue
