$main-color = #e75735
$header-color = #d54c2c
$arrows-hover-color = #c44325
$main-font-color = #868686
$cell-color = #f2f2f2
$today-btn-color = #e5e5e5
$today-btn-hover-color = #dedede

.calendar
  width: 279px

  &__day
    width: 279px
    height: 109px
    font-family: "Lato", "Arial", sans-serif
    font-weight: 300
    font-size: 80px
    text-align: center
    color: #ffffff
    line-height: 110px
    letter-spacing: -0.04em
    background-color: $main-color
    border-radius: 4px 4px 0 0

  &__datepicker
    .ui-datepicker
      box-sizing: border-box
      width: 279px
      padding: 0
      border: none

      &-header
        padding: 0
        border: none
        border-radius: 0
        height: 43px
        background-color: $header-color
        color: #ffffff
        font-family: "Lato", "Arial", sans-serif
        font-weight: 300
        font-size: 24px
        letter-spacing: -0.03em

      &-year
        display: none

      &-title
        line-height: 1.6em

      &-prev
        position: relative
        float: left
        top: 2px
        left: 0

      &-next
        position: relative
        float: right
        top: 2px
        right: 0

      &-next-hover,
      &-prev-hover
        cursor: pointer
        background-color: $arrows-hover-color
        border: none
        border-radius: 0
        right: 0
        left: 0

      .ui-icon
        background-image: none
        width: 9px
        height: 9px
        border-left: 2px solid #ffffff
        border-bottom: 2px solid #ffffff

        &-circle-triangle-e
          transform: rotate(-135deg)

        &-circle-triangle-w
          transform: rotate(45deg)
          left: 50% + 9px

      &-calendar
        margin: 0
        width: 279px

        th
          width: 39px
          height: 27px
          padding: 0
          font-family: "Lato", "Arial", sans-serif
          font-weight: 900
          font-size: 9px
          letter-spacing: 0.05em
          color: #ffffff
          background-color: $main-color

        td
          border-right: 1px solid #ffffff
          padding: 0

          &:last-child
            border-right: none

          .ui-state-default
            font-family: "Source Sans Pro", "Arial", sans-serif
            font-size: 20px
            font-weight: 400
            border: none
            padding: 0
            color: $main-font-color
            background-color: $cell-color
            line-height: 39px
            text-align: center

          .ui-state-active
            background-color: $main-color
            color: #ffffff

        .ui-datepicker-other-month
          background-color: $cell-color
          opacity: 1

          .ui-state-default
            color: #ffffff

        tr
          border-bottom: 1px solid #ffffff

  &__today
    box-sizing: border-box
    width: 100%
    height: 49px
    background-color: $today-btn-color
    border-radius: 0 0 4px 4px
    font-family: "Lato", "Arial", sans-serif
    font-weight: 900
    font-size: 13px
    letter-spacing: 0.05em
    line-height: 49px
    text-transform: uppercase
    color: $main-font-color
    padding-left: 20px
    text-align: left
    outline-color: $main-font-color
    border: none
    cursor: pointer

    &:hover
      background-color: $today-btn-hover-color
