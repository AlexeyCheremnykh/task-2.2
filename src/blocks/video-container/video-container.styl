.video-container
    &__content
        margin-top: 23px

@media (max-width: 611px)
    .video-container
        width: 100%

        &__content
            width: 100%
            position: relative
            padding-bottom: 56.25%
            height: 0
        
            .video
                position: absolute
                top: 0
                left: 0
                width: 100%
                height: 100%