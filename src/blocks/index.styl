html
  background-color: #ffffff
  color: #4f4f4f
  font-size: 16px
  font-family: "Arial", sans-serif

@import "../colors"

.ui-kit
  margin: 0 auto
  width: 620px
  padding-top: 81px
  padding-bottom: 109px
  display: flex
  flex-direction: column
  align-items: center

  @media (max-width: 637px)
    width: 100%

  &__title
    margin-top: 0
    margin-bottom: 0
    text-align: center
    text-transform: uppercase
    color: ui-kit-title
    font-size: 18px
    font-family: "Lato", "Arial", sans-serif
    font-weight: 900
    letter-spacing: 0.9px
    word-spacing: 4px
