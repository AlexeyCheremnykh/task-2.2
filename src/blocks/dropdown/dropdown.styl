$color-text = #666666
$color-arrow-background = #4eb7a8
$color-arrow = #ffffff
$color-placeholder = $color-outline = #888888
$color-main-background = #e5e5e5
$color-options-underline = rgba(88, 88, 88, 0.3)

.dropdown
  width: 288px

  &__option
    background-color: $color-main-background

.select2-container
  .selection
    .select2-selection
      box-sizing: border-box
      outline-color: $color-outline
      border: none
      height: 28px
      width: 288px
      padding-left: 6px
      padding-right: 33px
      background-color: $color-main-background
      border-radius: 2px
      font-family: "Source Sans Pro", "Arial", sans-serif
      font-weight: 400
      font-style: normal
      font-stretch: normal
      font-size: 14px

      .select2-selection__placeholder
        color: $color-placeholder

      .select2-selection__rendered
        color: $color-text

      .select2-selection__arrow
        width: 33px
        height: 28px
        border-radius: 0 3px 3px 0
        top: 0
        right: 0
        background-color: $color-arrow-background
        padding: 0

        b
          width: 8px
          height: 8px
          border: none
          border-left: 2px solid $color-arrow
          border-top: 2px solid $color-arrow
          transform: rotate(-135deg)
          top: 9px
          left: 15px

.select2-dropdown
  border: none

  .select2-results__options
    color: $color-text
    font-family: "Source Sans Pro", "Arial", sans-serif
    font-weight: 400
    font-style: normal
    font-stretch: normal
    font-size: 14px
    background-color: $color-main-background

  .select2-results__option
    padding-left: 13px
    border-bottom: 1px solid $color-options-underline