include ../news-article-preview/news-article-preview.pug
include ../event/event.pug
include ../ui-kit-title/ui-kit-title.pug

mixin news-events
    section.news-events
        +ui-kit-title({title: "News & Events"})
        - const newsArticle = require("../blocks/news-events/block-data/news.json");
        - const event = require("../blocks/news-events/block-data/event.json");
        .news-events__content
            +news-article-preview(newsArticle)
            .news-events__event
                +event(event)
