mixin standard_button({size, color, label, filled, dark = false, thin = false})
    - let btnClass = `ripple standard-button standard-button_size_${size} standard-button_color_${color}`;
    - btnClass = filled ? btnClass + " standard-button_filled" : btnClass;
    - btnClass = dark ? btnClass + " standard-button_dark" : btnClass;
    - btnClass = thin ? btnClass + " standard-button_thin" : btnClass;
    button(class=btnClass)&attributes(attributes) #{label}