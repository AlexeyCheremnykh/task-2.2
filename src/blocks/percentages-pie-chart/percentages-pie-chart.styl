.percentages-pie-chart
  width: 588px
  margin-bottom: 36px

  @media (max-width: 605px)
    width: 493px

  @media (max-width: 510px)
    width: 398px

  @media (max-width: 415px)
    width: 100%

  &__content
    display: flex
    justify-content: space-between
    margin-top: 23px

    @media (max-width: 510px)
      justify-content: space-around

    .percentage
      &:first-child
        @media (max-width: 605px)
          display: none

      &:nth-child(2)
        @media (max-width: 510px)
          display: none
