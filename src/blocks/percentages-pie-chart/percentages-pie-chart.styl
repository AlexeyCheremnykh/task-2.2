.percentages-pie-chart
  width: 588px
  margin-bottom: 36px

  @media (max-width: 605px)
    width: 493px

  @media (max-width: 510px)
    width: 398px

  @media (max-width: 415px)
    width: 100%

  &__title
    word-spacing: -0.1em

  &__content
    display: flex
    justify-content: space-between
    margin-top: 23px

    @media (max-width: 510px)
      justify-content: space-around

    .percentage
      @media (max-width: 605px)
        &:first-child
          display: none

      @media (max-width: 510px)
        &:nth-child(2)
          display: none
