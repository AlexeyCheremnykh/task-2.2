include ../percentage/percentage.pug
include ../pie-chart/pie-chart.pug
include ../ui-kit-title/ui-kit-title.pug

section.percentages-pie-chart
    +ui-kit-title({title: "Percentages / Pie Chart", shrunk: true})
    .percentages-pie-chart__content
        .percentages-pie-chart__percentage
            +percentage(0)
        .percentages-pie-chart__percentage
            +percentage(38)
        .percentages-pie-chart__percentage
            +percentage(62)
        .percentages-pie-chart__percentage
            +percentage(89)
        +pie-chart({values: [6, 26, 12, 30]})
