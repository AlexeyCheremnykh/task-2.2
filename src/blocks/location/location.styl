@import "../../colors"

.location
  border-radius 0.25rem
  overflow hidden

  &__map
    height 12.6875rem

  &__footer
    box-sizing border-box
    height 4.3125rem
    background-color $main-red
    color $white
    display flex
    justify-content space-between
    padding-left 1.6875rem
    padding-right 0.8125rem

  &__info
    font-family "Lato", "Arial", sans-serif
    display flex
    align-items center

  &__title
    font-weight 300
    font-size 1.875rem
    word-spacing -0.09em
    margin-right 1.625rem
    margin-bottom 0.625rem

    @media (max-width 475px)
      font-size 1.5625rem
      margin-bottom 0.3rem

  &__address
    font-weight 900
    font-size 0.7813rem
    letter-spacing 0.05em
    text-transform uppercase
    max-width 18.75rem

    @media (max-width 475px)
      font-size 0.6875rem

    @media (max-width 435px)
      display none

  &__address-part
    max-height 1.875rem
    overflow hidden

  &__buttons
    width 4.9375rem
    display flex
    justify-content space-between
    align-items center

  &__button
    width 1.875rem
    height 1.875rem

  &__my-location
    background url("img/map-my-location.png") no-repeat 0 0.0625rem

  &__pin
    background url("img/map-pin.png") no-repeat 0 0.125rem
