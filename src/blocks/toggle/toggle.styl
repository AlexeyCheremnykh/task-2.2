.toggle
  position: relative
  width: 59px
  height: 24px
  border-radius: 12px
  cursor: pointer

  &::after
    position: absolute
    content: ""
    display: block
    width: 18px
    height: 18px
    border-radius: 50%
    background-color: #ffffff

  &::before
    position: absolute
    display: block
    color: #ffffff
    font-family: "Lato", "Arial", sans-serif
    font-weight: 900
    font-size: 12px
    letter-spacing: 0.05em

  &_disabled
    background-color: #e5e5e5

    &::after
      top: 3px
      left: 3px

    &::before
      content: "off"
      text-transform: uppercase
      left: 26px
      top: 4px

  &_enabled
    background-color: #4eb7a8

    &::after
      top: 3px
      right: 3px

    &::before
      content: "on"
      text-transform: uppercase
      right: 29px
      top: 4px
