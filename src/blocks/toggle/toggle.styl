@import "../../colors"

.toggle
  position: relative
  width: 59px
  height: 24px        
  border-radius: 12px
  cursor: pointer

  &::after
    position: absolute
    content: ""
    display: block
    width: 18px
    height: 18px
    border-radius: 50%
    background-color: white            
      
  &::before
    position: absolute            
    display: block
    color: white
    font-family: "Lato"
    font-weight: 900
    font-size: 12px
    letter-spacing: 0.05em
      
  &_off
    background-color: disabled-grey
        
    &::after
      top: 3px
      left: 3px
        
    &::before
      content: "OFF"
      left: 26px
      top: 4px
      
  &_on
    background-color: main-blue
        
    &::after
      top: 3px
      right: 3px
        
    &::before
      content: "ON"
      right: 29px
      top: 4px
