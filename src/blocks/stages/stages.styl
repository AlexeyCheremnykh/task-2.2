@import "../../colors"

.stages    
  width: 577px  

  &__stage
    cursor: default
    position: relative
    display: inline-block
    border-radius: 50%
    font-family: "Lato", "Arial", sans-serif
    font-weight: 900
    font-size: 14px
    text-align: center
    line-height: 29px        
    width: 29px
    height: 29px
    margin: 0 0 0 108px
    cursor: pointer // может быть не стоит, конечно        

    &::before
      content: ""
      display: block
      position: absolute
      top: 13px
      right: 29px
      height: 5px
      width: 108px            
    
    &:first-child
      margin-left: 0
        
      &::before
        display: none 

    &-active
      background-color: main-red
      color: white

      &::before
        background-color: main-red  

    &-inactive
      background-color: disabled-grey
      color: stages-label

      &::before
        background-color: disabled-grey    