include ../standard-button/standard-button.pug
include ../section-title/section-title.pug

mixin standard-buttons
    section.standard-buttons
        +section-title({title: "Standard buttons"})
        .standard-buttons__content
            .standard-buttons__content-part
                - const smallCyan = {size: "small", color: "cyan", label: "button"};
                - const bigCyan = {size: "big", color: "cyan", label: "button"};
                - for (let i = 0; i < 3; i++)
                    .standard-buttons__button
                        +standard-button(smallCyan)
                    .standard-buttons__button
                        +standard-button(bigCyan)
            .standard-buttons__content-part
                - const smallRed = {size: "small", color: "red", label: "button"};
                - const bigRed = {size: "big", color: "red", label: "button"};
                - for (let i = 0; i < 3; i++)
                    .standard-buttons__button
                        +standard-button(bigRed)
                    .standard-buttons__button
                        +standard-button(smallRed)
