include ../slider/slider.pug

section.sliders
    h2.ui-kit__title Sliders
    .sliders__content
        .sliders__first-example
            - var optionsRed = {type: "type-a", min: 0, max: 100}
            +slider(optionsRed)
        .sliders__second-example
            - var optionsBlue = {type: "type-b", min: 0, max: 100, step: 25}
            +slider(optionsBlue)