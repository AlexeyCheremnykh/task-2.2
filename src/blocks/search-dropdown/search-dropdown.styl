.search-dropdown
  box-sizing: border-box
  width: 50%
  padding-left: 1.3125rem
  float: left

  @media (max-width: 637px)
    width: 18rem
    padding: 0
    margin-bottom: 3.4375rem
    float: none
    margin-left: auto
    margin-right: auto

  &__title
    word-spacing: normal

  &__content
    width: 18rem
    margin-top: 1.25rem

  &__search
    margin-bottom: 1rem
