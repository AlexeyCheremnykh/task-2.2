.form-elements-container
    margin-bottom: 67px    
    width: 100%
    
    &__content
        margin-top: 45px
        padding-left: 13px               

    .send-message-container        
        margin-top: 4px
        display: inline-block
        vertical-align: top
        box-sizing: border-box
        width: 48.93%
        
    .toggles-tick-box-container        
        display: inline-block  
        width: 51.07%

@media (max-width: 637px)
    .form-elements-container
        .send-message-container
            .send-message
                width: 96.97%

                &__name-field
                    width: 72.2%
                &__email-field
                    width: 72.2%
                &__message
                    width: 100%
                &__validation-message
                    width: 25%
                    font-size: 9px

@media (max-width: 400px)
    .form-elements-container
        .send-message-container
            .send-message
                &__validation-message
                    width: 25%
                    font-size: 8px