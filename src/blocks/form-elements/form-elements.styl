.form-elements
  margin-bottom 4.1875rem
  width 100%

  &__content
    margin-top 2.8125rem
    padding-left 1.3125rem

    @media (max-width 637px)
      padding-left 0

  &__send-message
    margin-top 0.25rem
    display inline-block
    vertical-align top
    box-sizing border-box
    width 48.93%

    @media (max-width 637px)
      display block
      width 18rem
      margin 0 auto

  &__toggles-tick-boxes
    display inline-block
    width 51.07%

    @media (max-width 637px)
      display block
      margin 3.125rem auto 0
