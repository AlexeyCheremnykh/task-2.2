.form-elements
  margin-bottom: 68px
  width: 100%

  &__content
    margin-top: 45px
    padding-left: 21px

  &__send-msg
    margin-top: 4px
    display: inline-block
    vertical-align: top
    box-sizing: border-box
    width: 48.93%

    .send-message
      @media (max-width: 637px)
        width: 96.97%
        &__name-field
          width: 72.2%
        &__email-field
          width: 72.2%
        &__message
          width: 100%
        &__validation-message
          width: 25%
          font-size: 9px

      @media (max-width: 400px)
        &__validation-message
          width: 25%
          font-size: 8px

  &__toggles-tick-boxes
    display: inline-block
    width: 51.07%
