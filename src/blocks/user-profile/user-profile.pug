include ../user-avatar/user-avatar.pug

mixin user-profile({color = "grey", name, profession, avatar, social = {}} = {})
    .user-profile
        .user-profile__avatar
            +user-avatar({imgPath: avatar})
        div(class="user-profile__info user-profile__info_" + color)
            .user-profile__name=name
            .user-profile__profession=profession
            .user-profile__social-container
                a.user-profile__social.user-profile__social_fb(href=social.facebook target="_blank" rel="noopener noreferrer")
                a.user-profile__social.user-profile__social_twitter(href=social.twitter target="_blank" rel="noopener noreferrer")
                a.user-profile__social.user-profile__social_dribbble(href=social.dribbble target="_blank" rel="noopener noreferrer")
