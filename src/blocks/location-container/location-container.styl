.location-container
  padding-bottom: 50px

  @media (max-width: 610px)
    width: 100%

  .location
    @media (max-width: 610px)
      width: 100%

    &__meet-us
      @media (max-width: 400px)
        font-size: 29px
        line-height: 30px

      @media (max-width: 387px)
        font-size: 26px

      @media (max-width: 374px)
        font-size: 23px

      @media (max-width: 355px)
        font-size: 20px

    &__address
      @media (max-width: 400px)
        font-size: 12px

      @media (max-width: 387px)
        font-size: 11px

      @media (max-width: 374px)
        font-size: 10px

      @media (max-width: 355px)
        font-size: 9.5px

  &__footer-text
    @media (max-width: 355px)
      margin-left: 23px

  &__content
    margin-top: 30px
